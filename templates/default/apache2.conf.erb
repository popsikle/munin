# Do NOT modify this file by hand!

<VirtualHost *:<%= node['munin']['web_server_port'] %>>
  ServerAdmin   <%= node['munin']['sysadmin_email'] %>
  ServerName    <%= node['fqdn'] %>
  ServerAlias   munin <%= node['munin']['public_domain'] %>
  Alias         /munin <%= node['munin']['docroot'] %>
  DocumentRoot  <%= node['munin']['docroot'] %>
  CustomLog     <%= node['apache']['log_dir'] %>/munin_access.log combined
  ErrorLog      <%= node['apache']['log_dir'] %>/munin_error.log

<% case node['munin']['server_auth_method'] -%>
<% when 'openid' -%>
  <Location />
    AuthName "Munin Server"
    AuthType OpenID
    require user <%= node['apache']['allowed_openids'].join(' ') %>
    AuthOpenIDDBLocation <%= node['apache']['mod_auth_openid']['dblocation'] %>
  </Location>
<% when 'basic' -%>
  <Location />
    AuthName "Munin Server"
    AuthType Basic
    AuthUserFile "<%= node['munin']['basedir'] %>/htpasswd.users"
    require valid-user
  </Location>
<% end -%>

<% if node.platform_family?('rhel', 'fedora') -%>
  <directory <%= node['munin']['docroot'] %>>
  ExpiresActive On
  ExpiresDefault M310
  </directory>
<% end -%>

  ScriptAlias /munin-cgi/munin-cgi-graph <%= node['munin']['cgiroot'] %>/munin-cgi-graph
  <Location /munin-cgi/munin-cgi-graph>
    Options +ExecCGI
    <IfModule mod_fcgid.c>
      SetHandler fcgid-script
    </IfModule>
    <IfModule mod_fastcgi.c>
      SetHandler fastcgi-script
    </IfModule>
    <IfModule !mod_fastcgi.c>
      <IfModule !mod_fcgid.c>
        SetHandler cgi-script
      </IfModule>
    </IfModule>
    Allow from all
  </Location>

  ScriptAlias /munin-cgi/munin-cgi-html <%= node['munin']['cgiroot'] %>/munin-cgi-html
  <Location /munin-cgi/munin-cgi-html>
    Options +ExecCGI
    <IfModule mod_fcgid.c>
      SetHandler fcgid-script
    </IfModule>
    <IfModule mod_fastcgi.c>
      SetHandler fastcgi-script
    </IfModule>
    <IfModule !mod_fastcgi.c>
      <IfModule !mod_fcgid.c>
        SetHandler cgi-script
      </IfModule>
    </IfModule>
    Allow from all
  </Location>

  RewriteEngine On
  RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /.*index\.html\ HTTP/
  RewriteRule ^(.*)index\.html$ $1 [R=301,L]
</VirtualHost>